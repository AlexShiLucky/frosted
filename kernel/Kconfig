menu "Platform Selection"

choice ARCH
    prompt "Architecture"
    default ARCH_LM3S

    config ARCH_LM3S
    bool "LM3S"
    help
        Enable support for Stellaris LM3S systems

    config ARCH_LPC17XX
    bool "LPC17XX"
    help
        Enable support for NXP LPC17xx systems

    config ARCH_STM32F4
    bool "STM32F4"
    help
        Enable support for ST STM32F4 systems
endchoice

source "../kernel/stm32f4/Kconfig"
source "../kernel/lpc17xx/Kconfig"
source "../kernel/lm3s/Kconfig"

config FLASH_SIZE_2MB
        bool
config FLASH_SIZE_1MB
        bool
config FLASH_SIZE_512KB
        bool
config FLASH_SIZE_384KB
        bool
config FLASH_SIZE_256KB
        bool
config FLASH_SIZE_128KB
        bool

config RAM_SIZE_192KB
        bool
config RAM_SIZE_128KB
        bool
config RAM_SIZE_96KB
        bool
config RAM_SIZE_64KB
        bool
config RAM_SIZE_32KB
        bool
config RAM_SIZE_16KB
        bool

#Temp hack to allow '407 & '411 clock setups to coexist
choice
    prompt "Clock Speed"
    config CLK_48MHZ
        bool "48MHz"
        depends on (ARCH_STM32F401_XB || ARCH_STM32F401_XC || ARCH_STM32F401_XD || ARCH_STM32F401_XE ||ARCH_STM32F411_XE || ARCH_STM32F411_XC)
    config CLK_84MHZ
        bool "84MHz"
        depends on (ARCH_STM32F401_XB || ARCH_STM32F401_XC || ARCH_STM32F401_XD || ARCH_STM32F401_XE ||ARCH_STM32F411_XE || ARCH_STM32F411_XC)
    config CLK_100MHZ
        bool "100MHz"
        depends on ARCH_LPC17XX
    config CLK_120MHZ
        bool "120MHz"
        depends on (ARCH_STM32F407_XG || ARCH_STM32F407_XE ||ARCH_LPC1769 )
    config CLK_168MHZ
        bool "168MHz"
        depends on (ARCH_STM32F407_XG || ARCH_STM32F407_XE)
endchoice

choice 
    prompt "Board"
config MACH_STM32F407Discovery
    bool "STM32F407Discovery"
    depends on (ARCH_STM32F407_XG || ARCH_STM32F407_XE)
    default y
config MACH_STM32F4x1Discovery
    bool "STM32F4x1Discovery"
    depends on (   ARCH_STM32F401_XB || ARCH_STM32F401_XC || ARCH_STM32F401_XD || ARCH_STM32F401_XE ||ARCH_STM32F411_XE || ARCH_STM32F411_XC)
    default y

config MACH_LPC1768MBED
    bool "LPC1768MBED"
    depends on ARCH_LPC1768
config MACH_SEEEDPRO
    bool "SEEEDPRO"
    depends on ARCH_LPC1768
    default y
config MACH_LPC1679XPRESSO
    bool "LPC1679XPRESSO"
    depends on ARCH_LPC1769
    default y

config MACH_LM3S6965EVB
    bool "lm3s6965evb"
    depends on ARCH_LM3S6965
    default y

endchoice

endmenu

menu "Kernel Configuration"
endmenu
 
config KFLASHMEM_SIZE
   int "Kernel Flash size (KB)"
   default 32

config KRAMMEM_SIZE
   int "Kernel RAM size (KB)"
   default 6

menu "Subsystems"
   menu "Filesystems"
       config SYSFS
       bool "SysFS (/sys)"
       default y

       config MEMFS
       bool "MemFS"
       default y
   endmenu

   menu "Sockets"
       config SOCK_UNIX
       bool "UNIX Sockets for IPC"
       default y
   endmenu

   menu "Devices"
       config DEVNULL
       bool "Support for /dev/null and /dev/zero"
       default y

       menuconfig DEVUART
       bool "Generic UART driver"
       default y

       if DEVUART

            config USART_0
            bool "USART 0"
            depends on ARCH_LM3S6965

            config USART_1
            bool "USART 1"
            depends on (ARCH_LM3S6965 ||STM32F4x1Discovery)

            config USART_2
            bool "USART 2"
            depends on (ARCH_LM3S6965 ||STM32F4x1Discovery)

            config USART_6
            bool "USART 6"
            depends on (ARCH_STM32F401_XB || ARCH_STM32F401_XC || ARCH_STM32F401_XD || ARCH_STM32F401_XE ||ARCH_STM32F411_XE || ARCH_STM32F411_XC)

            config UART_0
            bool "UART 0"
            depends on ARCH_LPC17XX

            config UART_1
            bool "UART 1"
            depends on ARCH_LPC17XX

            config UART_2
            bool "UART 2"
            depends on ARCH_LPC17XX

            config UART_3
            bool "UART 3"
            depends on ARCH_LPC17XX

       endif

       config GPIO_LPC17XX
       depends on ARCH_LPC17XX
       bool "LPC17XX GPIO driver"
       default y

       config GPIO_STM32F4
       depends on ARCH_STM32F4
       bool "STM32F4 GPIO driver"
       default y

   endmenu
endmenu

